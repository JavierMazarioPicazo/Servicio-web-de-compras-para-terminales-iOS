<h1>
    Usuario:
</h1>

<ul>

    <li>
        Nombre de usuario:
        <b><%= user.displayName %></b>
    </li>

    <li>
        Administrador:
        <b><%= user.isAdmin ? "Si" : "No" %></b>
    </li>

</ul>

<% if (locals.loginUser && (locals.loginUser.isAdmin || locals.loginUser.id === user.id)) { %>
    <p>
        <a href="/users/<%= user.id %>/edit" class="button">Editar</a>

        <a href="/users/<%= user.id %>?_method=DELETE"
           onClick="return confirm('Delete user: <%= user.displayName %>');"
           class="button">Borrar</a>
    </p>
<% } %>

<a href="/goback" class="button">Go back</a>

